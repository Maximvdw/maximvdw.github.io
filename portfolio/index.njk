---
layout: default.njk
permalink: /portfolio/
title: 'Portfolio'
eleventyExcludeFromCollections: ["portfolio"]
eleventyNavigation:
  key: Portfolio
  order: 5
---

<div class="container main">
  <div class="row">
    <div class="col-sm-12 typography">
        <h1>Portfolio</h1>
        <ol reversed class="postlist">
        {% for post in collections.portfolio | reverse %}
          <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}" itemscope itemtype="http://schema.org/CreativeWork">
            <img class="postlist-image" alt="{{ post.data.title }}" src="{{ post.data.thumbnail }}" itemprop="image"/>
            <div class="postlist-content">
              <a href="{{ post.url | url }}" class="postlist-link" itemprop="url">{% if post.data.title %}<span itemprop="name">{{ post.data.title }}</span>{% else %}<code>{{ post.url }}</code>{% endif %}</a>
              <time class="postlist-date" datetime="{{ post.date | htmlDateString }}" itemprop="datePublished">{{ post.date | readableDate }}</time>
              <span class="postlist-description" itemprop="description">{{ post.data.excerpt }}</span>
            </div>
          </li>
        {% endfor %}
        </ol>
    </div>
  </div>
</div>