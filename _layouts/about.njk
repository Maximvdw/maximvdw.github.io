---
layout: main.njk
---

<div class="row">
  <div class="col-sm-2">
    <img src="{{ profile_image }}" alt="Maxim Van de Wynckel" class="img-fluid rounded-circle">
  </div>
  <div class="col-sm-10">
    {{ content | safe }}
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <section class="cv-section" itemscope itemtype="http://schema.org/EducationEvent">
      <h1>Education</h1>
      <div class="education">
      {%- for entry in education %}
      <div class="education-item" itemprop="educationalCredentialAwarded" itemscope itemtype="http://schema.org/EducationalOccupationalCredential">
        <img src="{{ entry.icon }}" alt="{{ entry.university }} Logo" class="logo" itemprop="image">
        <div class="details">
        <h3 itemprop="provider" itemscope itemtype="http://schema.org/CollegeOrUniversity">
          <span itemprop="name">{{ entry.university }}</span>
        </h3>
        <h4 itemprop="educationalCredentialAwarded">{{ entry.degree }}</h4>
        <div class="year">
          <time itemprop="startDate" datetime="{{ entry.start }}">{{ entry.start }}</time> - 
          <time itemprop="endDate" datetime="{{ entry.end }}">{{ entry.end }}</time>
        </div>
        {% markdown %}
        <div itemprop="description">
          {{ entry.description }}
        </div>
        {% endmarkdown %}
        </div>
      </div>
      {%- endfor %}
      </div>
    </section>
  </div>
  <div class="col-sm-6">
    <section class="cv-section">
      <h1>Experience</h1>
      <div class="employment">
        {%- for entry in experience %}
        <div class="employment-item" itemscope itemtype="http://schema.org/OrganizationRole">
          <img src="{{ entry.icon }}" alt="{{ entry.company }} Logo" class="logo" itemprop="image">
          <div class="details">
        <h3 itemprop="memberOf" itemscope itemtype="http://schema.org/Organization">
          <span itemprop="name">{{ entry.company }}</span>
        </h3>
        <h4 itemprop="roleName">{{ entry.title }}</h4>
        <div class="year">
          <time itemprop="startDate" datetime="{{ entry.start }}">{{ entry.start }}</time> - 
          <time itemprop="endDate" datetime="{{ entry.end }}">{{ entry.end }}</time>
        </div>
        {% markdown %}
        <div itemprop="description">
          {{ entry.description }}
        </div>
        {% endmarkdown %}
          </div>
        </div>
        {%- endfor %}
      </div>
    </section>
  </div>
</div>
