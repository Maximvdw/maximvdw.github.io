---
sitemap: false
---
<!DOCTYPE html>
<html lang="en">
<head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.rawgit.com/jpswalsh/academicons/master/css/academicons.min.css">
        <link href="https://fonts.cdnfonts.com/css/itc-avant-garde-gothic-std-book" rel="stylesheet">
        <style>
                @page {
                        size: A4;
                        margin: 0;
                        background: #f7f7f7;
                }

                @media print {
                        * {
                                -webkit-print-color-adjust: exact;
                                print-color-adjust: exact;
                        }
                }

                body {
                        font-family: 'ITC Avant Garde Gothic Std Book', sans-serif;
                        line-height: 1.4;
                        color: #333;
                        margin: 0;
                        background: #f7f7f7;
                        padding: 0;
                }

                header {
                        padding: 1em;
                        margin-bottom: 10px;
                        background-color: #284cb5;
                        color: white;
                        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
                }

                header .links {
                        display: flex;
                        justify-content: space-between;
                }

                header h1 {
                        font-size: 2em;
                        margin-bottom: 5px;
                        text-align: center;
                }

                header p {
                        margin: 0;
                        font-size: 1em;
                }

                p {
                        margin: 0;
                }

                section {
                        padding: 10px;
                        padding-left: 5mm;
                        padding-right: 5mm;
                }

                h2 {
                        font-size: 1.5em;
                        margin-top: 0;
                        margin-bottom: 5px;
                        color: #284cb5;
                        border-bottom: 2px solid #284cb5;
                        padding-bottom: 3px;
                }

                ul {
                        list-style-type: none;
                        padding: 0;
                }

                li {
                        display: flex;
                        justify-content: space-between;
                        align-items: flex-start;
                        margin-bottom: 10px;
                }

                .date {
                        flex: 0 0 100px;
                        text-align: center;
                        margin-right: 10px;
                        color: #fff;
                        background: #284cb5;
                        padding: 3px 5px;
                        border-radius: 5px;
                        font-style: italic;
                }

                .content {
                        flex: 1;
                }

                h3 {
                        margin: 0;
                        font-size: 1.2em;
                        color: #284cb5;
                }

                strong {
                        display: inline-block;
                        font-weight: bold;
                        color:rgb(17, 34, 83);
                        margin-top: 3px;
                }
        </style>
</head>
<body>
        <header>
                <h1>{{ personal.firstName }} {{ personal.lastName }}</h1>
                <div style="display: flex; justify-content: space-between;">
                        <div>
                                <p><i class="fas fa-map-marker-alt"></i> {{ personal.address.street }}, {{ personal.address.postalCode }} {{ personal.address.city }}, {{ personal.address.country }}</p>
                        </div>
                        <div>
                                <p><i class="fas fa-envelope"></i> {{ personal.email.academic }}</p>
                                <p><i class="fas fa-birthday-cake"></i> {{ personal.birthPlace.city }}, {{ personal.birthPlace.country }}</p>
                                <p><i class="fas fa-mobile-alt"></i> {{ personal.phone.mobile }}</p>
                                <p class="links">
                                        <a href="{{ social.orcid }}"><i class="ai ai-orcid"></i> {{ social.orcid | replace("https://orcid.org/", "") }}</a>
                                        <a href="{{ social.linkedin }}"><i class="fab fa-linkedin"></i> {{ social.linkedin | replace("https://linkedin.com", "") }}</a>
                                        <a href="https://github.com/Maximvdw"><i class="fab fa-github"></i> github.com/Maximvdw</a>
                                </p>
                        </div>
                </div>
        </header>

        <section>
                <h2>Education</h2>
                <ul>
                        {% for edu in education %}
                        <li>
                                <div class="date">
                                        <span>{{ edu.start }} - {{ edu.end }}</span>
                                </div>
                                <div class="content">
                                        <h3>{{ edu.degree }}</h3>
                                        <strong>{{ edu.university }}</strong>
                                        {% if edu.grade %}
                                        <p><strong>Grade:</strong> {{ edu.grade }}</p>
                                        {% endif %}
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>

        <section>
                <h2>Experience</h2>
                <ul>
                        {% for job in experience %}
                        <li>
                                <div class="date">
                                        <span>{{ job.start }}{% if job.start != job.end %} - {{ job.end }}{% endif %}</span>
                                </div>
                                <div class="content">
                                        <h3>{{ job.title }}</h3>
                                        <strong>{{ job.company.name }}{% if job.note %} <small>({{ job.note }})</small>{% endif %}</strong>
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>

        <section>
                <h2>Publications</h2>
                <ul>
                        {% set publications = collections.publications | reverse %}
                        {% for pub in publications %}
                        <li>
                                <div class="content">
                                        {{ pub.data.excerpt }}
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>

        <section>
                <h2>Presentations</h2>
                <ul>
                        {% set presentations = collections.presentations | reverse %}
                        {% for presentation in presentations %}
                        <li>
                                <div class="content">
                                        {{ presentation.data.date }}
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>

        <section>
                <h2>Teached Courses</h2>
                <ul>
                        {% for course in teaching.courses %}
                        <li>
                                <div class="date">
                                        <span>{{ course.start }} - {{ course.end }}</span>
                                </div>
                                <div class="content">
                                        <h3>{{ course.course }} <small>({{ course.code }})</small></h3>
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>

        <section>
                <h2>Supervised Theses</h2>
                <ul>
                        {% for thesis in teaching.theses %}
                        <li>
                                <div class="date">
                                        <span>{{ thesis.start }} - {{ thesis.end }}</span>
                                </div>
                                <div class="content">
                                        <h3>{{ thesis.title }}</h3>
                                        <p><strong>Student:</strong> {{ thesis.student.name }}</p>
                                </div>
                        </li>
                        {% endfor %}
                </ul>
        </section>
</body>
</html>
